<% if obj.errors.any? %>
  <div class="row">
    <div class="col-sm-12">
      <div class="alert alert-danger">
        <h5 class="alert-heading">Found <%= pluralize obj.errors.count, 'error' %></h5>
        <small>
          <ul>
            <% obj.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </small>
      </div>
    </div>
  </div>
<% end %>